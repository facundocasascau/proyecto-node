<main class="container-fluid">
  <h2>{{title}}</h2>

  <div class="row px-3">
    <div class="card col-6 px-1 mb-4" style="width: 18rem;">
      <img class="card-img-top" src="{{thumbnail}}" alt="Card image cap">
      <div class="card-body">
        <h4>${{price}}</h4>
        <form action="/api/borrar/{{id}}" method="post">
          <button type="submit" class="btn btn-primary" id="delete" name="delete">
            Eliminar
          </button>
        </form>
      </div>
    </div>
  </div>
</main>
